{
    "compilerOptions": {
        "outDir": "lib/",
        "baseUrl": ".",
        "rootDir": ".",
        "lib": [
            "es2016",
            "es2018",
            "dom"
        ],
        "typeRoots": [
          "node_modules/@types",
          "node_modules/@0x/typescript-typings/types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "resolveJsonModule": true
    },
    "include": [
       "src"
    ],
    "files": [
        "artifacts/**.json"
    ]

}
